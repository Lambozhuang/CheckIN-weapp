page {
  background: #ededed;
}

.info-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 20rpx 40rpx 20rpx;
  margin-top: 60rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  background: #fefefe;
}

.info-container .logo {
  width: 500rpx;
  height: 500rpx;
}

.info-container .text-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  font-weight: 200;
}

.info-container .text-container .text {
  margin-bottom: 5rpx;
}

.info-container .text-container .text-3 {
  margin-top: 25rpx;
  margin-bottom: 10rpx;
  font-size: 26rpx;
}

@media (prefers-color-scheme: dark) {
  page {
    background: #111111;
  }

  .info-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx 20rpx 40rpx 20rpx;
    margin-top: 60rpx;
    margin-left: 60rpx;
    margin-right: 60rpx;
    background: #191919;
  }

  .info-container .logo {
    width: 500rpx;
    height: 500rpx;
  }

  .info-container .text-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    font-weight: 200;
  }

  .info-container .text-container .text {
    margin-bottom: 5rpx;
  }

  .info-container .text-container .text-3 {
    margin-top: 25rpx;
    margin-bottom: 10rpx;
    font-size: 26rpx;
  }
}
