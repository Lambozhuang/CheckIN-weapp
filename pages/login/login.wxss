page {
  background-color: #ededed;
}

.input-area {
  display: flex;
  flex-direction: column;
  justify-content: center;
  justify-content: space-evenly;
  padding-top: 60rpx;
  padding-left: 110rpx;
  padding-right: 110rpx;
  padding-bottom: 60rpx;
  margin-top: 60rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  background: #fefefe;
}

.input-area .input-title {
  padding-left: 10rpx;
  margin-bottom: 10rpx;
  color: #494949;
  font-weight: 300;
}

.input-area .input-container {
  margin-bottom: 40rpx;
  padding: 10rpx 20rpx 10rpx 20rpx;
  background-color: #ededed;
  border-radius: 10rpx;
  font-weight: 300;
}

.input-area .input-button-container {
  margin-top: 40rpx;
}

.input-area .input-button-container .input-button {
  background-color: #7ad8ff;
  color: #fefefe;
}

.input-area .input-button-container .input-button-active {
  background-color: #3bc4ff;
  color: #fefefe;
}

.text-container {
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  margin-top: 30rpx;
  color: #53c9ff;
  font-weight: 320;
}

@media (prefers-color-scheme: dark) {
  page {
    background: #111111;
  }

  .input-area {
    display: flex;
    flex-direction: column;
    justify-content: center;
    justify-content: space-evenly;
    padding-top: 60rpx;
    padding-left: 110rpx;
    padding-right: 110rpx;
    padding-bottom: 60rpx;
    margin-top: 60rpx;
    margin-left: 60rpx;
    margin-right: 60rpx;
    background: #191919;
  }

  .input-area .input-title {
    padding-left: 10rpx;
    margin-bottom: 10rpx;
    color: #ebebeb;
    font-weight: 300;
  }

  .input-area .input-container {
    margin-bottom: 40rpx;
    padding: 10rpx 20rpx 10rpx 20rpx;
    background-color: #111111;
    border-radius: 10rpx;
    font-weight: 300;
  }

  .input-area .input-button-container {
    margin-top: 40rpx;
  }

  .input-area .input-button-container .input-button {
    background-color: #62afcf;
    color: #191919;
  }

  .input-area .input-button-container .input-button-active {
    background-color: #2e9dcc;
    color: #191919;
  }

  .text-container {
    display: flex;
    justify-content: center;
    font-size: 30rpx;
    margin-top: 30rpx;
    color: #53c9ff;
    font-weight: 320;
  }
}
